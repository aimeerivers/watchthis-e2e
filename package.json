{
  "name": "watchthis-e2e",
  "version": "0.0.1",
  "description": "End-to-end test scenarios for WatchThis",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "cucumber": "HEADLESS=true cucumber-js",
    "cucumber:report": "open reports/cucumber-report.html",
    "cucumber:steps": "cucumber-js --dry-run --format usage:steps.txt",
    "cucumber:wip": "HEADLESS=false TIMEOUT_SECONDS=600 cucumber-js --profile wip",
    "docker:build": "./docker-services.sh build",
    "docker:clean": "./docker-services.sh clean",
    "docker:dev": "./docker-services.sh dev",
    "docker:down": "./docker-services.sh down",
    "docker:logs": "./docker-services.sh logs",
    "docker:pull": "./docker-services.sh pull",
    "docker:restart": "./docker-services.sh restart",
    "docker:status": "./docker-services.sh status",
    "docker:up": "./docker-services.sh up",
    "docker:wait": "./docker-services.sh wait",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "package:lint": "npx npm-package-json-lint .",
    "playwright:install": "npx playwright install",
    "playwright:install:chromium": "npx playwright install chromium"
  },
  "devDependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@cucumber/pretty-formatter": "2.3.0",
    "@faker-js/faker": "10.1.0",
    "@types/node": "24.8.1",
    "dotenv": "17.2.3",
    "eslint-config-plus-prettier": "4.2.3",
    "playwright": "1.56.1",
    "ts-node-maintained": "10.9.6",
    "typescript": "5.9.3"
  },
  "prettier": "eslint-config-plus-prettier/prettier"
}
